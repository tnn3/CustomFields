@using FormFactory
@using FormFactory.AspMvc
@model ProjectTaskViewModel

@{
    ViewData["Title"] = "Create";
}

@section CSS {
    <link href="/Content/FormFactory/FormFactory.css" rel="stylesheet" type="text/css" />
}

<h2>Create</h2>

<h4>ProjectTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectTask.Title" class="control-label"></label>
                <input asp-for="ProjectTask.Title" class="form-control" />
                <span asp-validation-for="ProjectTask.Title" class="text-danger"></span>
            </div>
            
            @{
                var formModel = new[]
                {
                    new PropertyVm(typeof(DateTime) , "date")
                    {
                        DisplayName = "Your birthday",
                        NotOptional =true,
                    }
                };
            }

            @formModel.Render(Html)
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts
{
    <script src="/Scripts/FormFactory/FormFactory.js" type="text/javascript"></script>
}

