@model CustomFields.ViewModels.FormFieldViewModel

@{
    bool editing = Model.CustomField.CombinedFields != null;
    var checkedValue = editing && Model.CustomField.CombinedFields[0].FieldValue.Equals("on") ? "checked" : string.Empty;
}

<div class="form-group">
    <input type="hidden" id="@($"{Model.Start}.CustomFieldId")" name="@($"{Model.Start}.CustomFieldId")" value="@Model.CustomField.Id" />
    <input type="checkbox" id="@($"{Model.Start}.FieldValue")" name="@($"{Model.Start}.FieldValue")" @checkedValue />
    <label class="control-label" for="@($"{Model.Start}.FieldValue")">@Model.CustomField.FieldName</label>
</div>