@model CustomFields.ViewModels.FormFieldViewModel

@{
    bool editing = Model.CustomField.CombinedFields != null;
    var checkedValue = editing ? Model.CustomField.CombinedFields[0].FieldValue : string.Empty;
}

<div class="form-group">
    <input type="hidden" id="@($"{Model.Start}.CustomFieldId")" name="@($"{Model.Start}.CustomFieldId")" value="@Model.CustomField.Id" />
    <label class="control-label" for="@($"{Model.Start}.FieldValue")">@Model.CustomField.FieldName.FieldDefaultName</label>
    @foreach (var radio in Model.CustomField.PossibleValues.Split(','))
    {
        var isChecked = radio.Equals(checkedValue) ? "checked" : "";
        <div class="radio">
            <label>
                <input type="radio" id="@($"{Model.Start}.FieldValue")" name="@($"{Model.Start}.FieldValue")" value="@radio" @isChecked/>@radio
            </label>
        </div>
    }
</div>